<%-  include('../partials/header') %>
  <h1>Event Show Page</h1>
  <div class="shadow p-3 mb-5 bg-white rounded">
    <h3><%= event.id %>: <%= event.title %>  </h3>
    <p><%= event.description %> </p>
    <hr>
    <p class="float-right">Last Updated at <%= event.updated_at %> By <%= event.owner ? event.owner.first_name : "" %> </p>
    <% if (user.id === event.owner.id) { %> 
      <form action="/events/<%= event.id %>" method="POST" style="display: inline;">
        <input type="hidden" name="_method" value="DELETE">
        <input class="btn btn-danger" type="submit" value="DELETE">
      </form>
      <a href="/events/<%= event.id %>/edit" class="btn btn-info">Edit</a>
    <% } %>
  </div>
<%-  include('../partials/footer') %>